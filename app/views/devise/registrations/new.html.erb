<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

  <div class="login-header">
    <%= link_to image_tag("arrow-left.svg", alt: "back", class: "arrow-back"), splashs_index_path %>
    <h2>REGISTER</h2>
    <%= f.submit "Next", class:'login-top-btn' %>
  </div>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field">
    <%= f.file_field :avatar %>
  </div>
  <br/>
  <br/>


  <div class="field">
    <%= f.text_field :name, autofocus: true, placeholder: 'Full Name', class: 'form-control' %>
  </div>
 
  <div class="field">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Password', class: 'form-control' %>
  </div>

<% end %>